
.container {
    position: relative;
    width: 100vw;
    height: 100vh;
}
.back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
}
.name {
    font-size: 72rpx;
    font-weight: 900;
    margin: 100rpx;
    line-height: 440rpx;
}
.button {
    position: relative;
    left: 10rpx;
    font-weight: bolder;
    width: 300rpx;
    height: 90rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    background-color: #3FE2EB;
    color: #000;
    border-radius: 50px;
}
